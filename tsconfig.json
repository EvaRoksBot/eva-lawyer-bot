{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/api/*": ["./api/*"]
    },
    "types": ["node"],
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "api/**/*",
    "src/**/*",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vercel",
    "**/*.test.ts"
  ]
}

