{
  "version": 2,
  "name": "eva-lawyer-bot-unified-system",
  "functions": {
    "api/telegram-unified-system.js": {
      "maxDuration": 60,
      "memory": 1024,
      "runtime": "nodejs18.x"
    },
    "api/telegram-fixed-400.js": {
      "maxDuration": 60,
      "memory": 1024,
      "runtime": "nodejs18.x"
    },
    "api/telegram-assistant-api.js": {
      "maxDuration": 60,
      "memory": 1024,
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/telegram",
      "destination": "/api/telegram-unified-system.js"
    },
    {
      "source": "/api/telegram-unified-system",
      "destination": "/api/telegram-unified-system.js"
    },
    {
      "source": "/health",
      "destination": "/api/telegram-unified-system.js"
    },
    {
      "source": "/stats",
      "destination": "/api/telegram-unified-system.js"
    },
    {
      "source": "/",
      "destination": "/api/telegram-unified-system.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
    "OPENAI_API_KEY": "@openai_api_key",
    "OPENAI_ASSISTANT_ID": "@openai_assistant_id",
    "DADATA_API_KEY": "@dadata_api_key",
    "DADATA_SECRET_KEY": "@dadata_secret_key",
    "TG_WEBHOOK_SECRET": "@tg_webhook_secret"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, X-Telegram-Bot-Api-Secret-Token"
        }
      ]
    }
  ]
}

